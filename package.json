    "portscanner": "^2.1.1",
    "promise-while": "^1.0.1",
    "prompt": "^1.0.0",
    "ramda": "^0.25.0",
    "response-time": "^2.3.2",
    "rlp-encoding": "^3.0.0",
    "rocksdb": "^2.0.0",
    "secp256k1": "^3.5.0",
    "serve-index": "^1.9.1",
    "sha3": "^1.2.0",
    "socket.io": "^2.0.4",
    "socket.io-client": "^2.0.4",
    "tar": "^4.4.0",
    "terminate": "^2.1.0",
    "truffle-hdwallet-provider": "0.0.3",
    "tx-builder": "^0.13.1",
    "waves-api": "^0.24.0",
    "web3": "^0.20.6",
    "webcoin-bitcoin": "^3.1.4",
    "webcoin-bitcoin-testnet": "^1.1.1",
