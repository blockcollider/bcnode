{
  "name": "bcnode",
  "version": "1.0.0",
  "description": "Block Collider with miners and rovers",
  "main": "lib/src/init.js",
  "scripts": {
    "check": "yarn run dist",
    "doc": "./node_modules/.bin/esdoc",
    "lint:standard": "standard src/**/*.es6",
    "lint:flow": "flow",
    "proto": "./node_modules/grpc-tools/bin/protoc.js --proto_path=protos --js_out=import_style=commonjs,binary:src/protos protos/*.proto --grpc_out=src/protos --plugin=protoc-gen-grpc=./node_modules/grpc-tools/bin/grpc_node_plugin && yarn run proto-fix",
    "proto-fix": "./scripts/proto-fix.sh",
    "transpile": "babel src --config-file ./.babelrc --out-dir lib --ignore ./lib/,./node_modules,./.babelrc,./package.json,./npm-debug.log",
    "test": "jest",
    "build-native": "./node_modules/neon-cli/bin/cli.js build -d",
    "build": "rimraf dist/ && yarn run lint:flow && yarn run lint:standard && yarn run transpile --copy-files ",
    "dist": "yarn && yarn run proto && yarn run build-native && yarn run build && yarn test --ci && yarn run nsp check --threshold 7 && yarn run outdated && yarn run doc",
    "outdated": "yarn outdated || true",
    "watch:lint": "onchange src/**/*.es6 -- yarn run lint:standard",
    "watch:transpile": "onchange src/**/*.es6 -- babel {{changed}} --config-file ./.babelrc --out-dir lib --ignore lib,node_modules",
    "watch:test": "jest --watch",
    "watch": "concurrently -p name -n 'standard,babel,jest' 'yarn run watch:lint' 'yarn run watch:transpile' 'yarn run watch:test'",
    "webpack": "./node_modules/webpack/bin/webpack.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blockcollider/bcnode.git"
  },
  "author": {
    "name": "Patrick McConlogue",
    "email": "pm@blockcollider.org",
    "url": "https://blockcollider.org/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/blockcollider/bcnode/issues"
  },
  "homepage": "https://github.com/blockcollider/bcnode#readme",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx",
      "es6"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/*.*",
      "node_modules/jest/node_modules/jest-cli/build/test_scheduler.js",
      "/lib/"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.(js|es6)"
    ],
    "transform": {
      "^.+\\.(js|es6)$": "babel-jest"
    },
    "collectCoverage": true
  },
  "standard": {
    "globals": [
      "describe",
      "context",
      "beforeAll",
      "beforeEach",
      "afterAll",
      "afterEach",
      "it",
      "test",
      "expect",
      "jest"
    ],
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ]
  },
  "dependencies": {
    "async": "~2.6.0",
    "avon": "^2.1.0",
    "axios": "^0.18.0",
    "base-x": "^3.0.4",
    "base58": "^1.0.1",
    "bcoin": "^1.0.0-beta.15",
    "big.js": "^5.0.3",
    "binstring": "^0.2.1",
